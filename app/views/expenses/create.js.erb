<% unless @expense.errors.any? %>
  $('div.new-expense-form .errors').text('');
  $('#expenses-list tbody').prepend('<%= escape_javascript(render @expense) %>');
  $('#expense_value').val('');
  $('#categories').val('');
  $('#categories').tokenInput("clear");
<% else %>
  <% if @expense.errors.messages[:value].include?("can't be blank") %>
    $('div.new-expense-form .errors').text("Zabudli ste zadať cenu!");
  <% elsif @expense.errors.messages[:value].include?("is not a number") %>
    $('div.new-expense-form .errors').text("Cena musí byť číslo!");
  <% else %>
  $('div.new-expense-form .errors').text("Nastala chyba pri ukladaní výdavku. Prosím, skúste to znova.");
  <% end %>
<% end %>

